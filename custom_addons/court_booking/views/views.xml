<odoo>
<record id="action_court_booking" model="ir.actions.act_window">
  <field name="name">Court Bookings</field>
  <field name="res_model">court.booking</field>
  <field name="view_mode">tree,form</field>
</record>
<record id="action_court_details" model="ir.actions.act_window">
  <field name="name">Courts</field>
  <field name="res_model">court.details</field>
  <field name="view_mode">tree,form</field>
</record>
<record id="action_court_time_slots" model="ir.actions.act_window">
  <field name="name">Time Slots</field>
  <field name="res_model">court.time.slot</field>
  <field name="view_mode">tree,form</field>
</record>
<record id="action_facility_config" model="ir.actions.act_window">
  <field name="name">Facility Config</field>
  <field name="res_model">court.facility.config</field>
  <field name="view_mode">tree,form</field>
</record>

<record id="view_court_booking_tree" model="ir.ui.view">
  <field name="name">court.booking.tree</field>
  <field name="model">court.booking</field>
  <field name="arch" type="xml">
    <tree>
      <field name="member_id"/>
      <field name="court_id"/>
      <field name="booking_date"/>
      <field name="slot_id"/>
      <field name="racket_qty"/>
      <field name="status"/>
    </tree>
  </field>
</record>

<record id="view_court_booking_form" model="ir.ui.view">
  <field name="name">court.booking.form</field>
  <field name="model">court.booking</field>
  <field name="arch" type="xml">
    <form>
      <sheet><group>
        <field name="member_id"/>
        <field name="booking_date"/>
        <field name="court_id"/>
        <field name="slot_id"/>
        <field name="racket_qty"/>
        <field name="status"/>
      </group></sheet>
    </form>
  </field>
</record>

<record id="view_court_details_tree" model="ir.ui.view">
  <field name="name">court.details.tree</field>
  <field name="model">court.details</field>
  <field name="arch" type="xml">
    <tree><field name="name"/><field name="is_active"/></tree>
  </field>
</record>
<record id="view_court_details_form" model="ir.ui.view">
  <field name="name">court.details.form</field>
  <field name="model">court.details</field>
  <field name="arch" type="xml">
    <form><sheet><group><field name="name"/><field name="is_active"/></group></sheet></form>
  </field>
</record>

<record id="view_court_time_slot_tree" model="ir.ui.view">
  <field name="name">court.time.slot.tree</field>
  <field name="model">court.time.slot</field>
  <field name="arch" type="xml">
    <tree><field name="name"/><field name="code"/><field name="start_time"/><field name="end_time"/></tree>
  </field>
</record>
<record id="view_court_time_slot_form" model="ir.ui.view">
  <field name="name">court.time.slot.form</field>
  <field name="model">court.time.slot</field>
  <field name="arch" type="xml">
    <form><sheet><group><field name="name"/><field name="code"/><field name="start_time"/><field name="end_time"/></group></sheet></form>
  </field>
</record>

<record id="view_court_facility_config_tree" model="ir.ui.view">
  <field name="name">court.facility.config.tree</field>
  <field name="model">court.facility.config</field>
  <field name="arch" type="xml">
    <tree><field name="name"/><field name="total_rackets"/><field name="max_rackets_per_booking"/><field name="max_bookings_per_slot"/></tree>
  </field>
</record>
<record id="view_court_facility_config_form" model="ir.ui.view">
  <field name="name">court.facility.config.form</field>
  <field name="model">court.facility.config</field>
  <field name="arch" type="xml">
    <form><sheet><group><field name="name"/><field name="total_rackets"/><field name="max_rackets_per_booking"/><field name="max_bookings_per_slot"/></group></sheet></form>
  </field>
</record>

<menuitem id="menu_court_root" name="Court Management"/>
<menuitem id="menu_court_booking" name="Bookings" parent="menu_court_root" action="action_court_booking"/>
<menuitem id="menu_court_details" name="Courts" parent="menu_court_root" action="action_court_details"/>
<menuitem id="menu_time_slots" name="Time Slots" parent="menu_court_root" action="action_court_time_slots"/>
<menuitem id="menu_facility_config" name="Facility Config" parent="menu_court_root" action="action_facility_config"/>
</odoo>
