<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="crm_case_kanban_view_leads_remove_sum" model="ir.ui.view">
    <field name="name">crm.lead.kanban.remove_sum</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
    <field name="arch" type="xml">
        <xpath expr="//progressbar" position="attributes">
            <attribute name="sum_field"></attribute>
            <attribute name="recurring_revenue_sum_field"></attribute>
        </xpath>
        <xpath expr="/kanban" position="attributes">
            <attribute name="default_group_by">status</attribute>
            <attribute name="records_draggable">1</attribute>
             <attribute name="default_order">activity_date_deadline asc</attribute>
        </xpath>
    </field>
</record>
<record id="view_crm_lead_tree_stage" model="ir.ui.view">
    <field name="name">crm.lead.tree.stage</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
    <field name="arch" type="xml">
        <xpath expr="//tree" position="inside">
            <field name="call_status"/>   
        </xpath>
    </field>
</record>
<record id="view_crm_lead_kanban_inherit_pipeline" model="ir.ui.view">
    <field name="name">crm.lead.kanban.inherit.pipeline</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.view_crm_lead_kanban"/>
    <field name="arch" type="xml">
        <xpath expr="/kanban" position="attributes">
            <attribute name="default_group_by">call_status</attribute>
            <attribute name="records_draggable">0</attribute>
            <attribute name="default_order">activity_date_deadline asc</attribute>
        </xpath>
    </field>
</record>
</odoo>