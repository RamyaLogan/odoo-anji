<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_crm_lead_search_extend_phone" model="ir.ui.view">
    <field name="name">crm.lead.search.extend.phone</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="attributes">
            <attribute name="filter_domain">
                ['|','|','|','|','|','|',
                  ('partner_name', 'ilike', self),
                  ('email_from', 'ilike', self),
                  ('contact_name', 'ilike', self),
                  ('name', 'ilike', self),
                  ('phone', 'ilike', self),
                  ('mobile', 'ilike', self),
                  ('whatsapp_no', 'ilike', self)]
            </attribute>
        </xpath>
       <xpath expr="//search" position="inside">
            <field name="batch_code_full" string="Batch Code"/>
        </xpath>
    </field>
</record>
<record id="view_crm_oppurtunity_search_extend_phone" model="ir.ui.view">
    <field name="name">crm.oppurtunity.search.extend.phone</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="attributes">
            <attribute name="filter_domain">
                ['|','|','|','|','|','|',
                  ('partner_id', 'ilike', self),
                  ('partner_name', 'ilike', self),
                  ('email_from', 'ilike', self),
                  ('name', 'ilike', self),
                  ('contact_name', 'ilike', self),
                  ('phone', 'ilike', self),
                  ('whatsapp_no', 'ilike', self)]
            </attribute>
        </xpath>
       <xpath expr="//search" position="inside">
            <field name="batch_code_full" string="Batch Code"/>
        </xpath>
    </field>
</record>
</odoo>