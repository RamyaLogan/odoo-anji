<!-- views/crm_assign_leads_wizard_view.xml -->
<odoo>
    <record id="view_crm_assign_leads_wizard_form" model="ir.ui.view">
        <field name="name">crm.assign.leads.wizard.form</field>
        <field name="model">crm.assign.leads.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Leads">
                <group>
                    <field name="user_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Assign" type="object" name="action_assign_leads" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>