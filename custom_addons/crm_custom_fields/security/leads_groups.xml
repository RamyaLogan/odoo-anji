<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Group Category -->
    <record id="module_category_lead_team" model="ir.module.category">
        <field name="name">Lead Teams</field>
        <field name="sequence">10</field>
    </record>

    <!-- Online Sales Team (Web + FB) -->
    <record id="group_online_sales_team" model="res.groups">
        <field name="name">Online Sales Team</field>
        <field name="category_id" ref="crm_custom_fields.module_category_lead_team"/>
    </record>

    <!-- Offline Sales Team -->
    <record id="group_offline_sales_team" model="res.groups">
        <field name="name">Offline Sales Team</field>
        <field name="category_id" ref="crm_custom_fields.module_category_lead_team"/>
    </record>

    <!-- Sales Manager -->
    <record id="group_sales_manager" model="res.groups">
        <field name="name">Sales Manager</field>
        <field name="category_id" ref="crm_custom_fields.module_category_lead_team"/>
        <field name="implied_ids" eval="[(4, ref('group_online_sales_team')), (4, ref('group_offline_sales_team'))]"/>
    </record>
</odoo>