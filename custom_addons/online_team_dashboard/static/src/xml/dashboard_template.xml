<templates id="template" xml:space="preserve">
    <t t-name="online_team_dashboard.Template">
        <!-- Sticky Top Filter Bar -->
        <div class="o_control_panel d-flex flex-column px-3 pt-2 pb-3">
  <div class="o_control_panel_main d-flex flex-wrap gap-3">
    
    <!-- Breadcrumb -->
    <div class="o_breadcrumb d-flex gap-1 text-truncate align-items-center">
      <div class="o_last_breadcrumb_item active d-flex fs-4 align-items-center">
        <span class="text-truncate"> Dashboard</span>
      </div>
    </div>

    <div class="d-flex flex-wrap align-items-center justify-content-left gap-3 px-4 pt-3 pb-2 border-bottom " style="margin-left: 3%;width: 63%;">
    <!-- Period Dropdown -->
    <t t-if="state.activeTab === 'online'">
         <OnlineTeamFilters state="state"/>  
    </t>
    <t t-if="state.activeTab === 'offline'">
         <OfflineTeamFilters state="state"/>  
    </t>

    </div>
    <div class="o_breadcrumb d-flex gap-1 text-truncate align-items-center" style="margin-left: 5%;margin-top: 4%;width: 17%;justify-content: right;">
        <button class="btn btn-primary px-4" t-on-click="applyFilters">Apply</button>
        </div>
    </div>
    </div>
    <div class="o_dashboard o_form_sheet d-flex" style="min-height: 100vh;height:100vh;">
            <!-- Sidebar Menu -->
        <div class="o_sidebar bg-light border-end pe-3 pt-4" style="width: 220px;">
                <ul class="list-unstyled ps-2">
                    <li><a href="#" t-on-click="() => onSwitchTab('online')"
             t-att-class="state.activeTab === 'online' ? 'fw-bold text-primary' : 'text-muted'">Online Team </a></li>
                    <li class="mt-2"><a href="#" t-on-click="() => onSwitchTab('offline')"
             t-att-class="state.activeTab === 'offline' ? 'fw-bold text-primary' : 'text-muted'">Offline Team </a></li>
                </ul>
        </div>
        <div class="flex-grow-1 ps-4 pt-4 pb-5 overflow-auto" style="padding-bottom: 200px !important;max-width: 99%">
                <t t-if="state.activeTab === 'online'">
        <OnlineTeamDashboard ref="onlineDashboardRef" state="state"/>
    </t>
    <t t-if="state.activeTab === 'offline'">
        <OfflineTeamDashboard ref="offlineDashboardRef" state="state"/>
    </t>
    
        </div>
    </div>
    </t>
</templates>